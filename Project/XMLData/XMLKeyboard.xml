<?xml version="1.0" encoding="utf-8" ?>
<Controllers>
	<!-- GAME COMMANDS -->
	<Control>
		<type>Game</type>
		<name>GameEndCmd</name>
		<key>Q</key>
	</Control>

	<Control>
		<type>Game</type>
		<name>GameRestartCmd</name>
		<key>R</key>
	</Control>

	<Control>
		<type>Game</type>
		<name>GamePauseCmd</name>
