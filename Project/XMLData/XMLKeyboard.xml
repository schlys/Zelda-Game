	</Control>

	<Control player="1" press="true">
		<type>Link</type>
		<name>LinkItemSelectDownCmd</name>
		<key>Down</key>
	</Control>

	<Control player="1" press="true">
		<type>Link</type>
		<name>LinkSelectItem1Cmd</name>
		<key>D1</key>
	</Control>
	
	<Control player="1" press="true">
		<type>Link</type>
		<name>LinkSelectItem1Cmd</name>
