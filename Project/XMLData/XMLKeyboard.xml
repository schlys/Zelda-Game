	</Control>

	<Control player="1">
		<type>Link</type>
		<name>LinkMoveLeftCmd</name>
		<key>Left</key>
	</Control>

	<!-- PLAYER 1 ITEM SELECTION -->
	<Control player="1" press="true">
		<type>Link</type>
		<name>LinkItemSelectRightCmd</name>
		<key>Right</key>
	</Control>
	
	<Control player="1" press="true">
		<type>Link</type>
