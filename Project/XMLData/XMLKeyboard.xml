	<Control>
		<type>Game</type>
		<name>GameSetLinkCount2Cmd</name>
		<key>D2</key>
	</Control>
	
	<!-- PLAYER 2 MOVEMENT -->
	<Control player="2">
		<type>Link</type>
		<name>LinkMoveUpCmd</name>
		<key>W</key>	
	</Control>
	
	<Control player="2">
		<type>Link</type>
		<name>LinkMoveDownCmd</name>
		<key>S</key>	
